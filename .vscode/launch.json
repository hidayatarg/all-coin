{
    // This file is made to run ts-node directly
    // ts-node package should be installed globally
    // the main.ts location should be given properly
    // hidayat argandabi 2020 copyright
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${workspaceFolder}/src/main.ts"
            ]
        }
    ]
}